<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.mccreefei.zhihu.dao.ZhihuTextDetailDao">
    <insert id="addZhihuTextDetail" parameterType="cn.mccreefei.zhihu.model.ZhihuTextDetail">
        insert into zhihu_text_detail
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="characterUrl != null">
                character_url,
            </if>
            <if test="url != null">
                url,
            </if>
            <if test="textType != null">
                text_type,
            </if>
            <if test="content != null">
                content,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="modifyTime != null">
                modify_time,
            </if>
        </trim>

        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="characterUrl != null">
                #{characterUrl},
            </if>
            <if test="url != null">
                #{url},
            </if>
            <if test="textType != null">
                #{textType},
            </if>
            <if test="content != null">
                #{content},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="modifyTime != null">
                #{modifyTime},
            </if>
        </trim>

        on duplicate key update
        <trim suffixOverrides=",">
            <if test="content != null">
                content = #{content},
            </if>
            <if test="modifyTime != null">
                modify_time = #{modifyTime},
            </if>
        </trim>
    </insert>

</mapper>
